<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Algoritma360</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Tailwind CSS - Compiled -->
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
</head>
<body class="bg-gray-50">
    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside id="sidebar" class="bg-gradient-to-b from-blue-900 to-blue-800 text-white w-64 space-y-6 py-7 px-2 fixed inset-y-0 left-0 transform transition duration-200 ease-in-out z-20">
            <!-- Logo -->
            <div class="flex items-center justify-center mb-8">
                <div class="bg-white bg-opacity-20 rounded-lg p-3 backdrop-blur-sm">
                    <i class="fas fa-cube text-3xl text-white"></i>
                </div>
                <span class="ml-3 text-xl font-bold">Depo Yönetim Sistemi</span>
            </div>

            <!-- Navigation -->
            <nav class="space-y-2">
                <a asp-controller="Home" asp-action="Index" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                    <i class="fas fa-home w-5"></i>
                    <span>Ana Sayfa</span>
                </a>
            @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Product" asp-action="Create" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                        <i class="fas fa-plus-circle w-5"></i>
                        <span>Ürün Ekle</span>
                    </a>
                }
                @if (User.IsInRole("Admin") || User.IsInRole("Operator"))
                {
                    <a asp-controller="Shipment" asp-action="Index" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                        <i class="fas fa-shipping-fast w-5"></i>
                        <span>Sevkiyat</span>
                    </a>
                }

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Log" asp-action="Index" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                        <i class="fas fa-clipboard-list w-5"></i>
                        <span>Kayıtlar</span>
                    </a>
                }

                @if (User.IsInRole("Admin") || User.IsInRole("Operator"))
                {
                    <a asp-controller="Product" asp-action="AddStock" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                        <i class="fas fa-boxes w-5"></i>
                        <span>Stok Ekle</span>
                    </a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Report" asp-action="StockReport" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                        <i class="fas fa-boxes w-5"></i>
                        <span>Stok Raporu</span>
                    </a>
                }
                @if(User.IsInRole("Admin")){
                <a asp-controller="Report" asp-action="TransactionReport" class="sidebar-link flex items-center space-x-3 px-4 py-3 rounded-lg hover:bg-white hover:bg-opacity-10 transition duration-200">
                    <i class="fas fa-boxes w-5"></i>
                    <span>İşlem Raporu</span>
                </a>}
            </nav>

            <!-- User Section -->
            <div class="absolute bottom-0 left-0 right-0 p-4">
                <div class="bg-white bg-opacity-10 rounded-lg p-4 backdrop-blur-sm">
                    <div class="flex items-center space-x-3 mb-3">
                        <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium">@User.Identity!.Name</p>
                            <p class="text-xs text-gray-300">Yönetici</p>
                        </div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button type="submit" class="w-full bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg transition duration-200 text-sm">
                            <i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap
                        </button>
                    </form>
                </div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden ml-64">
            <!-- Top Navigation -->
            <header class="bg-white shadow-sm z-10">
                <div class="flex items-center justify-between px-6 py-4">
                    <div class="flex items-center space-x-4">
                        <button id="sidebarToggle" class="text-gray-600 hover:text-gray-900 focus:outline-none lg:hidden">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                        <h1 class="text-2xl font-bold text-gray-800">@ViewData["Title"]</h1>
                    </div>
                 
                </div>
            </header>

            <!-- Page Content -->
            <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-6">
                @RenderBody()
            </main>

            <!-- Footer -->
            <footer class="bg-white border-t border-gray-200 py-4">
                <div class="px-6 text-center text-gray-600 text-sm">
                    &copy; @DateTime.Now.Year Hüseyin Kocatürk 
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Sidebar Toggle for Mobile
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        
        if (sidebarToggle) {
            sidebarToggle.addEventListener('click', () => {
                sidebar.classList.toggle('-translate-x-full');
            });
        }

        // Active Link Highlighting
        const currentPath = window.location.pathname;
        document.querySelectorAll('.sidebar-link').forEach(link => {
            if (link.getAttribute('href') === currentPath) {
                link.classList.add('bg-white', 'bg-opacity-20');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
