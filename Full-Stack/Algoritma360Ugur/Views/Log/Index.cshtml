@model List<Log>

@{
    ViewData["Title"] = "Sevkiyat Kayıtları";
    Layout = "_Layout";
}

<div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-purple-600 to-purple-700 text-white">
        <h2 class="text-2xl font-bold flex items-center">
            <i class="fas fa-clipboard-list mr-3"></i>Sevkiyat Kayıtları
        </h2>
        <p class="text-purple-100 mt-1">Tüm sevkiyat işlemlerinin detaylı geçmişi</p>
    </div>

    <div class="p-6">
        @if (Model.Count > 0)
        {
            <!-- İstatistikler -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-blue-500 rounded-full p-3 mr-3">
                            <i class="fas fa-list text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam Kayıt</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Count</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-green-500 rounded-full p-3 mr-3">
                            <i class="fas fa-box text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam Adet</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Sum(l => l.Quantity)</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-purple-500 rounded-full p-3 mr-3">
                            <i class="fas fa-users text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Aktif Kullanıcı</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Select(l => l.User.Username).Distinct().Count()</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tablo -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="far fa-calendar mr-2"></i>Tarih & Saat
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-user mr-2"></i>Kullanıcı
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-box mr-2"></i>Ürün
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-sort-numeric-up mr-2"></i>Miktar
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var log in Model.OrderByDescending(l => l.CreatedAt))
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <i class="far fa-clock text-gray-400 mr-2"></i>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@log.CreatedAt.ToString("dd MMMM yyyy")</div>
                                            <div class="text-xs text-gray-500">@log.CreatedAt.ToString("HH:mm:ss")</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-purple-400 to-purple-600 rounded-full flex items-center justify-center text-white font-bold">
                                            @log.User.Username.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">@log.User.Username</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold">
                                            @log.Product.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">@log.Product.Name</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (log.Quantity > 0)
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-green-100 text-green-800">
                                            <i class="fas fa-arrow-up mr-2"></i>+@log.Quantity
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-red-100 text-red-800">
                                            <i class="fas fa-arrow-down mr-2"></i>@log.Quantity
                                        </span>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-clipboard text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500 text-lg">Henüz sevkiyat kaydı bulunmuyor</p>
                <a asp-controller="Shipment" asp-action="Index" class="mt-4 inline-block bg-purple-600 hover:bg-purple-700 text-white px-6 py-3 rounded-lg transition duration-200">
                    <i class="fas fa-shipping-fast mr-2"></i>İlk Sevkiyatı Yap
                </a>
            </div>
        }

        <div class="mt-6 pt-6 border-t">
            <a asp-controller="Home" asp-action="Index"
               class="text-gray-600 hover:text-gray-800 font-medium transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>Dashboard'a Dön
            </a>
        </div>
    </div>
</div>