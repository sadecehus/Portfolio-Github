@model List<Algoritma360Ugur.ViewModels.Reports.TransactionReportViewModel>

@{
    ViewData["Title"] = "İşlem Raporu";
    Layout = "_Layout";
}

<div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-cyan-600 to-cyan-700 text-white">
        <h2 class="text-2xl font-bold flex items-center">
            <i class="fas fa-exchange-alt mr-3"></i>İşlem Raporu
        </h2>
        <p class="text-cyan-100 mt-1">Tüm stok giriş ve sevkiyat işlemlerinin detaylı listesi</p>
    </div>

    <div class="p-6">
        @if (Model.Count > 0)
        {
            <!-- İstatistikler -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-blue-500 rounded-full p-3 mr-3">
                            <i class="fas fa-list text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam İşlem</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Count</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-green-500 rounded-full p-3 mr-3">
                            <i class="fas fa-arrow-up text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Stok Girişi</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Count(t => t.Quantity > 0)</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-red-500 rounded-full p-3 mr-3">
                            <i class="fas fa-arrow-down text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Sevkiyat</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Count(t => t.Quantity < 0)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tablo -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="far fa-calendar mr-2"></i>Tarih & Saat
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-user mr-2"></i>Kullanıcı
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-box mr-2"></i>Ürün
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-sort-numeric-up mr-2"></i>Miktar
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-tag mr-2"></i>İşlem Türü
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var transaction in Model)
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <i class="far fa-clock text-gray-400 mr-2"></i>
                                        <div>
                                            <div class="text-sm font-medium text-gray-900">@transaction.Date.ToString("dd MMMM yyyy")</div>
                                            <div class="text-xs text-gray-500">@transaction.Date.ToString("HH:mm:ss")</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-cyan-400 to-cyan-600 rounded-full flex items-center justify-center text-white font-bold">
                                            @transaction.Username.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">@transaction.Username</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center text-white font-bold">
                                            @transaction.ProductName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">@transaction.ProductName</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (transaction.Quantity > 0)
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-green-100 text-green-800">
                                            <i class="fas fa-arrow-up mr-2"></i>+@transaction.Quantity
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-red-100 text-red-800">
                                            <i class="fas fa-arrow-down mr-2"></i>@transaction.Quantity
                                        </span>
                                    }
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (transaction.Quantity > 0)
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs font-medium rounded-full bg-green-100 text-green-800">
                                            <i class="fas fa-plus-circle mr-1"></i>Stok Girişi
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-xs font-medium rounded-full bg-red-100 text-red-800">
                                            <i class="fas fa-shipping-fast mr-1"></i>Sevkiyat
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-exchange-alt text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500 text-lg">Henüz işlem kaydı bulunmuyor</p>
                <a asp-controller="Product" asp-action="Create" class="mt-4 inline-block bg-cyan-600 hover:bg-cyan-700 text-white px-6 py-3 rounded-lg transition duration-200">
                    <i class="fas fa-plus mr-2"></i>İlk İşlemi Başlat
                </a>
            </div>
        }

        <div class="mt-6 pt-6 border-t">
            <a asp-controller="Home" asp-action="Index"
               class="text-gray-600 hover:text-gray-800 font-medium transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>Dashboard'a Dön
            </a>
        </div>
    </div>
</div>