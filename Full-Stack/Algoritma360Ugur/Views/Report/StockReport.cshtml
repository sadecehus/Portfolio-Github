@model List<Algoritma360Ugur.ViewModels.Reports.StockReportViewModel>

@{
    ViewData["Title"] = "Stok Raporu";
    Layout = "_Layout";
}

<div class="bg-white rounded-xl shadow-md overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-indigo-600 to-indigo-700 text-white">
        <h2 class="text-2xl font-bold flex items-center">
            <i class="fas fa-chart-bar mr-3"></i>Stok Raporu
        </h2>
        <p class="text-indigo-100 mt-1">Ürünlerin giriş, çıkış ve mevcut stok durumu</p>
    </div>

    <div class="p-6">
        @if (Model.Count > 0)
        {
            <!-- İstatistikler -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-blue-500 rounded-full p-3 mr-3">
                            <i class="fas fa-boxes text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam Ürün</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Count</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-green-500 rounded-full p-3 mr-3">
                            <i class="fas fa-arrow-up text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam Giriş</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Sum(s => s.TotalIn)</p>
                        </div>
                    </div>
                </div>
                <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-lg p-4">
                    <div class="flex items-center">
                        <div class="bg-red-500 rounded-full p-3 mr-3">
                            <i class="fas fa-arrow-down text-white"></i>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Toplam Çıkış</p>
                            <p class="text-2xl font-bold text-gray-800">@Model.Sum(s => s.TotalOut)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tablo -->
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-box mr-2"></i>Ürün Adı
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-arrow-up mr-2"></i>Toplam Giriş
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-arrow-down mr-2"></i>Toplam Çıkış
                            </th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                <i class="fas fa-warehouse mr-2"></i>Mevcut Stok
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        @foreach (var item in Model.OrderByDescending(s => s.CurrentStock))
                        {
                            <tr class="hover:bg-gray-50 transition duration-150">
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center text-white font-bold">
                                            @item.ProductName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div class="ml-3">
                                            <div class="text-sm font-medium text-gray-900">@item.ProductName</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-green-100 text-green-800">
                                        <i class="fas fa-plus mr-2"></i>@item.TotalIn
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-red-100 text-red-800">
                                        <i class="fas fa-minus mr-2"></i>@item.TotalOut
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    @if (item.CurrentStock > 10)
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-blue-100 text-blue-800">
                                            <i class="fas fa-check-circle mr-2"></i>@item.CurrentStock
                                        </span>
                                    }
                                    else if (item.CurrentStock > 0)
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                            <i class="fas fa-exclamation-circle mr-2"></i>@item.CurrentStock
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="px-3 py-1 inline-flex text-sm font-semibold rounded-full bg-gray-100 text-gray-800">
                                            <i class="fas fa-times-circle mr-2"></i>@item.CurrentStock
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-12">
                <i class="fas fa-chart-bar text-gray-300 text-6xl mb-4"></i>
                <p class="text-gray-500 text-lg">Henüz stok kaydı bulunmuyor</p>
                <a asp-controller="Product" asp-action="Create" class="mt-4 inline-block bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-lg transition duration-200">
                    <i class="fas fa-plus mr-2"></i>İlk Ürünü Ekle
                </a>
            </div>
        }

        <div class="mt-6 pt-6 border-t">
            <a asp-controller="Home" asp-action="Index"
               class="text-gray-600 hover:text-gray-800 font-medium transition duration-200">
                <i class="fas fa-arrow-left mr-2"></i>Dashboard'a Dön
            </a>
        </div>
    </div>
</div>